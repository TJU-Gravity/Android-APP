<?xml version="1.0" encoding="utf-8"?>
<com.allattentionhere.fabulousfilter.AAH_FilterView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:visibility="invisible"
        tools:ignore="MissingPrefix"
        tools:visibility="visible">
        <Button
            android:id="@+id/btn_close"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="@drawable/round_close_white_18dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:paddingBottom="10dp">





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/body_box"
                    app:primaryColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"

                    app:labelText="回复"
                    app:maxCharacters="250"
                    app:hasClearButton="true"
                    >


                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        app:panelBackgroundColor="@color/white"
                        android:id="@+id/introduction"
                        app:primaryColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:inputType="textMultiLine"

                        />

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            </LinearLayout>



            <Button

                android:id="@+id/btn_commit"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提交"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:background="@color/white"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:background="@color/md_brown_50"
            android:orientation="horizontal"
            android:weightSum="2">
        </LinearLayout>

    </RelativeLayout>

</com.allattentionhere.fabulousfilter.AAH_FilterView>