<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yanghan.gravity">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.me.MeActivity"
            android:theme="@style/Base.Theme.DesignDemo" />
        <activity android:name=".ui.me.favorites.FavoritesActivity" />
        <activity android:name=".ui.me.edit.EditActivity" />
        <activity
            android:name=".ui.team.GroupMessageActivity"
            android:label="@string/title_activity_group_message" />
        <activity android:name=".ui.team.GroupMessageChangeActivity" />
        <activity android:name=".ui.main.newPost.NewPostActivity" />
        <activity android:name=".ui.news.NewsDetailActivity" />
        <activity android:name=".ui.team.GroupCreateActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.main.postDetail.PostDetailActivity" />
        <activity android:name=".ui.login.register.NewUserActivity" />
        <activity android:name=".ui.visitingCard.VisitingCardActivity"></activity>
    </application>

</manifest>